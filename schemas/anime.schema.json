{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Anime Database Schema",
  "type": "object",

  "required": [
    "anilist_id",
    "titles",
    "format",
    "status",
    "episodes",
    "year",
    "genres",
    "anilist_score",
    "match"
  ],

  "properties": {
    "anilist_id": { "type": "integer" },

    "titles": {
      "type": "object",
      "required": ["romaji"],
      "properties": {
        "romaji": { "type": "string" },
        "english": { "type": ["string", "null"] },
        "native": { "type": ["string", "null"] }
      }
    },

    "format": { "type": ["string", "null"] },
    "status": { "type": "string" },
    "episodes": { "type": ["integer", "null"] },
    "year": { "type": ["integer", "null"] },

    "genres": {
      "type": "array",
      "items": { "type": "string" }
    },

    "anilist_score": { "type": ["number", "null"] },

    "tmdb": {
      "type": ["object", "null"],
      "required": ["id", "media_type"],
      "properties": {
        "id": { "type": "integer" },
        "media_type": { "type": "string" },

        "title": { "type": ["string", "null"] },
        "original_title": { "type": ["string", "null"] },
        "overview": { "type": ["string", "null"] },

        "status": { "type": ["string", "null"] },
        "release_date": { "type": ["string", "null"] },

        "episodes": { "type": ["integer", "null"] },
        "seasons": { "type": ["integer", "null"] },
        "runtime": { "type": ["integer", "null"] },

        "vote_average": { "type": ["number", "null"] },
        "vote_count": { "type": ["integer", "null"] },
        "popularity": { "type": ["number", "null"] },

        "poster": { "type": ["string", "null"] },
        "backdrop": { "type": ["string", "null"] },

        "genres": {
          "type": "array",
          "items": { "type": "string" }
        },

        "studios": {
          "type": "array",
          "items": { "type": "string" }
        },

        "networks": {
          "type": "array",
          "items": { "type": "string" }
        },

        "origin_country": {
          "type": ["array", "null"],
          "items": { "type": "string" }
        },

        "trailers": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "name": { "type": "string" },
              "key": { "type": "string" },
              "language": { "type": ["string", "null"] },
              "official": { "type": ["boolean", "null"] }
            }
          }
        },

        "content_ratings": {
          "type": "object",
          "additionalProperties": { "type": "string" }
        }
      }
    },

    "tmdb_localized": { "type": ["object", "null"] },
    "tmdb_fallback": { "type": ["object", "null"] },

    "match": {
      "type": "object",
      "required": ["status"],
      "properties": {
        "status": {
          "type": "string",
          "enum": ["MATCHED", "NOT_MATCHED", "NOT_FOUND"]
        },
        "method": { "type": ["string", "null"] },
        "score": { "type": ["number", "null"] },
        "tmdb_id": { "type": ["integer", "null"] },
        "media_type": { "type": ["string", "null"] }
      }
    }
  },

  "additionalProperties": true
}
